<div class="album py-5 bg-light">
  <div class="container">
    <div class="texts-wrapper">
      <div class="contents-title text-center">
        <h3>店舗一覧</h3>
        <div class="row">
          <% @shops.each do |shop| %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
              <%= link_to shop_path(shop) do %>
              <%= attachment_image_tag shop, :image, :fill, 270, 190, class: 'images', fallback: "no_image.jpg" %>
              <div class="card-body">
                <p class="card-title"><%= shop.name %></p>
                <% end %>
                <p class="card-title"><%= shop.phonenumber %></p>
                <p class="card-title"><%= shop.address %></p>
                <p class="card-title"><%= shop.description %></p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
