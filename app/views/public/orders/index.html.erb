<div class="container">
  <div class="row">
    <div class='col-md-10 offset-md-1'>
      <h2><span class="badge bg-secondary text-white mb-3">注文履歴一覧</span></h2>
      <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>注文日時</th>
              <th>予約日時</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.month.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td><%=link_to "詳細", order_path(order) %></link_to></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                <% end %>
              </td>
            </tr>
            <% end %>

          </tbody>
        </table>
    </div>
  </div>
</div>
