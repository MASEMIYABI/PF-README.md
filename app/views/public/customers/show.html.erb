<h2>マイページ</h2>
  <h3>登録情報
  <%= link_to "編集する",edit_customers_path, class: "btn btn-sm btn-success" %></h3>
　<table border="1">
　  <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %><%= @customer.first_name%></th>
    </tr>
    <tr>
      <th>カナ</th>
      <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %> </th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.phone_number %></th>
    </tr>
    <h3>注文履歴<%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %></h3>

　</table>
