<main class="bg-light">
    <div class="jumbotron ">
        <div class="container">
            <%= image_tag 'logo.jpg', :size => '69x37' %>
            <h3 class = "text-success">Esoon</h3>
            <p class="text-success">お持ち帰りを楽々予約</p>
        </div>
    </div>
    <div class="container">
        <div class="texts-wrapper">
            <div class="contents-title">
　　　　　　　<h3>ショップ一覧</h3>
　　　　　　　<div class="row no-gutters">
　　　　　　　    <% @shop.limit(4).each do |shop| %>
　　　　　　　    <div class="col-12 col-md-6 col-lg-3">
　　　　　　　        <div class="card h-50 mx-auto shadow-lg">
　　　　　　　            <%= link_to shop_path(shop) do %>
　　　　　　　            <%= attachment_image_tag shop, :image, :fill, 270, 190, class: 'image', fallback: "no_image.jpg" %>
　　　　　　　            <div class="card-img-overlay">
　　　　　　　                <h5 class="card-title"><%= shop.name %></h5>
　　　　　　　            </div>
　　　　　　　            <% end %>
　　　　　　　        </div>
　　　　　　　    </div>
　　　　　　　    <% end %>
　　　　　　　</div>
            </div>
        </div>
    </div>
</main>
