<div class="containar">
  <div class="row no-gutters">
    <h3 class="mt-3">ショップ編集</h3>
      <%= form_with model: @admins, url: admins_admins_path(@admins), local:true do |f| %>
       <div class="form-group">
          <label>商品画像</label>
          <%= f.attachment_field :image %>
        </div>

        <div class="form-group">
          <label>ショップ名</label>
          <%= f.text_field :name,class: "form-control", placeholder: "ショップ名" %>
        </div>

        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.text_field :email,class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <label>電話番号</label>
          <%= f.text_field :phone_number,class: "form-control", placeholder: "電話番号" %>
        </div>

        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address,class: "form-control", placeholder: "住所" %>
        </div>

        <div class="form-group">
          <label>ショップ説明</label>
          <%= f.text_area :description,class: "form-control", placeholder: "ショップ説明" %>
        </div>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
  </div>
</div>
