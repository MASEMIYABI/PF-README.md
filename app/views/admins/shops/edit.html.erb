<div class="containar">
  <div class="row no-gutters">
    <h3 class="mt-3">ショップ編集</h3>
     <%= form_with model: @shop, url: admins_shop_path(@shop), local:true do |f| %>
     <div class="form-group">
        <label>ジョップ画像</label>
        <%= f.attachment_field :image %>
      </div>

      <div class="form-group">
        <label>ショップ名</label>
        <%= f.text_field :name, class: "form-control", placeholder: "ショップ名" %>
      </div>

      <div class="form-group">
      	<label>住所</label>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>電話番号</label>
        <%= f.text_field :phonenumber, class: "form-control", placeholder: "電話番号" %>
      </div>

      <div class="form-group">
      	<label>商品説明</label>
        <%= f.text_area :description, class: "form-control" %>
      </div>


     <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
     <% end %>
  </div>
</div>